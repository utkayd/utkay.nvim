{
  "Print Statement": {
    "prefix": "pr",
    "body": [
      "print('$1')"
    ],
    "description": "Quick print statement"
  },

  "Print with inspect": {
    "prefix": "pri",
    "body": [
      "print(vim.inspect($1))"
    ],
    "description": "Print with vim.inspect for tables"
  },

  "Neovim Plugin Template": {
    "prefix": "plugin",
    "body": [
      "return {",
      "  '$1',",
      "  config = function()",
      "    require('$2').setup {",
      "      $3",
      "    }",
      "  end,",
      "}"
    ],
    "description": "Create a Neovim plugin configuration"
  },

  "Function with docstring": {
    "prefix": "func",
    "body": [
      "--- $1",
      "--- @param $2",
      "--- @return $3",
      "local function ${4:function_name}($2)",
      "  $5",
      "end"
    ],
    "description": "Function with LuaLS documentation"
  }
}
